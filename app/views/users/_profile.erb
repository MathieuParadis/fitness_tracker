<div class="box box-shadow d-flex flex-column justify-content-between mx-0 my-3 me-lg-3 my-lg-0 p-3 h-100">
  <div>
    <h3 class="text-primary mb-3">My profile</h3>
    <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar, class: "avatar" %>
    <% else %>
      <%= image_tag("avatar/avatar.svg", class: "avatar") %>
    <% end %>
    <div class="py-3">
      <p class="mb-2 pb-1"><span>Email: </span><%= @user.email %></p>
      <p class="mb-2 pb-1"><span>First name: </span><%= @user.first_name %></p>
      <p class="mb-2 pb-1"><span>Last name: </span><%= @user.last_name %></p>
      <p class="mb-2 pb-1"><span>Age: </span><%= age(@user.date_of_birth) %></p>
      <p class="mb-2 pb-1"><span>Sex: </span><%= @user.gender.capitalize %></p>
    </div>
  </div>

  <div class="d-flex flex-column">
    <%= link_to "Edit my profile", edit_user_path, class: "btn btn-secondary btn-round btn-200 mb-2" %>
    <%= link_to "Change my credentials", edit_user_registration_path, class: "btn btn-outline-secondary btn-round btn-200 mt-2" %>
  </div>

</div>