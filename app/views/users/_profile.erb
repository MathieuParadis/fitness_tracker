<div class="box box-shadow d-flex flex-column justify-content-between mx-0 my-3 me-lg-3 my-lg-0 p-3 h-100">
  <div>
    <h3 class="text-primary mb-3">My profile</h3>
    <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar, class: "avatar" %>
    <% end %>
    <div class="py-3">
      <p><span>First name: </span><%= @user.first_name %></p>
      <p><span>Last name: </span><%= @user.last_name %></p>
      <p><span>Email: </span><%= @user.email %></p>
    </div>
  </div>

  <div class="d-flex flex-column mt-3">
    <%= link_to "Edit my profile", user_records_path, class: "btn btn-secondary btn-round btn-200 mb-2" %>
    <%= link_to "Change my credentials", user_records_path, class: "btn btn-outline-secondary btn-round btn-200 mt-2" %>
  </div>

</div>