  <div class="activity-index">
    <p id="notice"><%= notice %></p>

    <div class="container">
      <div class="row">
        <h1>Activities</h1>
        <div class="d-flex flex-wrap">
        
          <% @activities.each do |activity| %>
            <div class="activity-card col-12 col-md-6 col-lg-3 px-0 py-2 px-md-2">
              <div class="card card_blue">
                <% if activity.picture.attached? %>
                  <%= image_tag activity.picture, alt: "activity image" %>
                <% end %>
              </div>
              <div class="card card_white d-none">
                <% if activity.hoovered_picture.attached? %>
                  <%= image_tag activity.hoovered_picture, alt: "activity image" %>
                <% end %>
              </div>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>


<%= link_to 'New Activity', new_activity_path %>
